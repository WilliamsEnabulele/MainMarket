@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

@model LoginRequest

<div class="container-fluid">
    <div class="parent-container mt-5">
        <div class="w-20">
            @if (TempData["errors"] != null)
            {
                var errors = TempData["errors"] as IEnumerable<string>;
                <div class="alert alert-danger" role="alert">
                   @foreach (var error in errors)
                    {
                        TempData["error"] = error;
                        @TempData["error"]
                    }
                </div> 
            }
            <form asp-action="Login">
                <div class="form-group">
                    <input asp-for="Email" class="form-control mb-3" type="text" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control mb-3" type="password" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-md btn-primary mt-4 w-100">Login</button>
            </form>
        </div>
    
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

