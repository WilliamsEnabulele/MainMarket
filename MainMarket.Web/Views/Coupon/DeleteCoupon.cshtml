@model CouponDto

<div class="container">
    <ol class="mt-5 mb-5 breadcrumb">
        <li class="breadcrumb-item"><a asp-action="CouponIndex">Coupons</a></li>
        <li class="breadcrumb-item active">Coupon</li>
    </ol>
    <form asp-action="CouponDelete" class="mt-5">
        <fieldset>
            <legend>Delete Coupon</legend>
            <input asp-for="CouponId" hidden />
            <div class="form-group">
                <label for="couponCode" class="form-label mt-4">Coupon Code</label>
                <input asp-for="CouponCode" type="text" class="form-control" id="couponCode" aria-describedby="couponHelp" placeholder="Coupon Code" disabled>
            </div>
            <div class="form-group">
                <label for="couponDiscountAmount" class="form-label mt-4">Discount Amount</label>
                <input asp-for="DiscountAmount" type="number" class="form-control" id="couponDiscountAmount" placeholder="Discount Amount" autocomplete="off" disabled>
            </div>
            <div class="form-group">
                <label for="couponMinimumAmount" class="form-label mt-4">Minimum Amount</label>
                <input asp-for="MinAmount" type="number" class="form-control" id="couponMinimumAmount" aria-describedby="minimumHelp" placeholder="Minimum Amount" autocomplete="off" disabled>
            </div>
            <input type="submit" class="btn btn-danger form-control mt-3" value="Delete">
        </fieldset>
    </form>
</div>